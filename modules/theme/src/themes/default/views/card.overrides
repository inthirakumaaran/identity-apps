.ui.card {
    &.application-card {
        &.recent {
            color: @recentApplicationCardDefaultColor;

            &:hover {
                transform: none;
            }
            .logo {
                background: transparent;
                padding: 3em 0;
                height: 170px;
            }
            .application-image {
                text-align: center;

                &.default {
                    background: @whiteSmoke;
                }
            }
            .application-content {
                .text-content-container {
                    display: inline-block;

                    .application-name {
                        color: @recentApplicationCardHeaderColor;
                        font-size: @recentApplicationCardHeaderFontSize;
                        line-height: @recentApplicationCardHeaderFontSize;
                        margin-bottom: 4px;
                        max-width: @recentApplicationCardHeaderMaxWidth;
                        white-space: nowrap;
                        text-overflow: ellipsis;
                        overflow: hidden;
                    }
                    .application-description {
                        color: @recentApplicationCardDescColor;
                        max-width: @recentApplicationCardDescMaxWidth;
                        white-space: nowrap;
                        overflow: hidden;
                        text-overflow: ellipsis;
                    }
                    .application-tag {
                        margin: 0;
                        font-size: 0.8em;
                    }
                }
                .icon-container {
                    display: inline-block;
                    font-size: 1.3em;
                    float: right;
                    margin-top: 10px;

                    .favourite-icon {
                        &.favoured {
                            color: @starColor;
                        }
                    }
                }
            }
        }
    }
    &.settings-card {
        border: @settingsCardBorder;
        box-shadow: none;

        // override the default the margin bottom
        &:last-child {
            margin-bottom: 0.3em;
        }
        .no-padding {
            padding: 0;
        }
        .header-section {
            padding: @settingsCardHeaderPadding;

            // override the semantic H2 margin
            .ui.header {
                font-size: @settingsCardHeaderFontSize;
                margin-bottom: 5px;
            }
        }
        .top-action-panel {
            box-shadow: none;
            padding: 0 @settingsCardPadding;
            border-left: 0;
            border-right: 0;
            border-top: @settingsCardTopActionPanelBorderTop;
            border-bottom: @settingsCardTopActionPanelBorderBottom;

            .description {
                display: flex;
                align-items: center;
            }
            &.no-margin-bottom {
                margin-bottom: 0;
            }
        }
        .main-content {
            .main-content-inner {
                .edit-segment {
                    padding: @settingsCardPadding;
                }
                .inner-list-item {
                    padding: 0;

                    .first-column {
                        padding-left: @settingsCardPadding;
                    }
                    .last-column {
                        padding-right: @settingsCardPadding;
                    }
                }
                &.no-margin-top {
                    margin-top: 0;
                }
            }
        }
        .extra-content {
            padding: 0;

            .action-button {
                padding: 16px @settingsCardPadding;

                .action-button-text {
                    color: @settingsCardActionButtonColor;
                    font-weight: 500;
                }
                &.disabled {
                    .action-button-text {
                        color: @black;
                    }
                }
            }
        }
        .settings-section-tab {
            .ui.attached.menu:not(.tabular) {
                border-radius: 0;
                border-left: none;
                border-right: none;
            }
            .ui.secondary.pointing.menu .item {
                padding-left: @settingsCardPadding;
                padding-right: @settingsCardPadding;
                border-bottom-width: @settingsCardTabItemBorderBottom;

                &:active, &.active {
                    border-bottom-color: @settingsCardTabItemBorderBottomColor;
                }
            }
            .ui.segment {
                &.tab-pane {
                    border: none;
                    box-shadow: none;
                    margin-top: 0;
                    padding: 0;
                }
            }
        }
    }
    &.advance-settings-card {
             .advance-settings {
                   .endpoint-row {
                     position: relative;
                     display: flex;
                     flex-direction: row;
                     flex-wrap: wrap;
                     justify-content: inherit;
                     align-items: stretch;
                     width: 100% !important;
                     padding: 0rem;
                     padding-top: 0.5rem;
                     padding-bottom: 0.5rem;
                   }
             }
    }
}
